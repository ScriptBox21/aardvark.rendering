<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo"
        xmlns:WPF="clr-namespace:Aardvark.Application.WPF;assembly=Aardvark.Application.WPF" x:Class="WpfDemo.MainWindow"
        mc:Ignorable="d"
        Title="WPF render control demo" Height="350" Width="525">
    <Grid>

        <WPF:RenderControl BorderBrush="Black" BorderThickness="1" Name="renderControl" Margin="0,0,94,0"/>
        <CheckBox x:Name="checkBox" Content="Rotate" HorizontalAlignment="Left" Margin="441,0,0,0" VerticalAlignment="Top" IsChecked="True" Panel.ZIndex="2"/>

    </Grid>
</Window>
